{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "skipLibCheck": true,
        "outDir": "./api",
        "rootDir": "./api_src",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "Node",
        "baseUrl": "./",
        "paths": {
            "@prisma/client": [
                "node_modules/@prisma/client"
            ]
        }
    },
    "exclude": [
        "./src"
    ],
    "include": [
        "./api_src"
    ]
}