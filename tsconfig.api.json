{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "skipLibCheck": true,
        "outDir": "./api",
        "rootDir": "./api_src",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
    },
    "exclude": [
        "./src",
        "./node_modules"
    ],
    "include": [
        "./api_src"
    ]
}